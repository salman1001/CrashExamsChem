<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Doubts.DoubtsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:id="@+id/newDoubts"
            android:backgroundTint="#AC8B4B"
            android:text="Ask New Doubts"
            android:layout_gravity="center"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/seeDoubtsAns"
            android:layout_marginStart="@dimen/_8sdp"
            android:backgroundTint="#55AC4B"
            android:text="See Your Answers"
            android:layout_gravity="center"/>
    </LinearLayout>


</FrameLayout>