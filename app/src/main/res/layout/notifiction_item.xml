<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"

        android:layout_marginEnd="@dimen/_8sdp"
        android:id="@+id/cardHeader"
        app:cardBackgroundColor="#F1EFEF"
        app:cardCornerRadius="@dimen/_16sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_14sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title Of The Notification"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/pri"
                android:fontFamily="@font/ubuntu_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/title_notifi"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_20_jan_2020"

                android:textColor="@color/dash"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="end"
                android:layout_marginTop="@dimen/_6sdp"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toBottomOf="@id/title_notifi"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/title_date"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/message"
                android:textColor="@color/black"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toBottomOf="@id/title_date"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/title_body"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>