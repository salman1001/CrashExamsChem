<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_4sdp"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/imag_chapter"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/viewback"
        android:background="@drawable/background_chpaters"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/chapter_name"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:id="@+id/checkmeee"
        android:src="@drawable/chechme"
        app:layout_constraintEnd_toEndOf="@id/viewback"
        app:layout_constraintBottom_toBottomOf="@id/viewback"
        android:layout_marginEnd="@dimen/_10sdp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/viewback"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_4sdp"
        android:id="@+id/imag_chapter"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingTop="@dimen/_8sdp"
        android:textColor="@color/white"
        android:text="Motion In A Plane"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toEndOf="@id/imag_chapter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imag_chapter"

        android:id="@+id/chapter_name"/>


</androidx.constraintlayout.widget.ConstraintLayout>